package prog.relatoriopendencia;

public class RelatorioPendencia {

    public static void main(String[] args) {
        
        String nome = "Diego";
        double salario = 1336.58;
        char sexo = 'M';
        short idade = 22;
        String estadoCivil = "Solteiro";
        
        System.out.println("Trabalhador(a) " + nome + " do sexo " + sexo + 
            ", idade " + idade + ", estado civil " + estadoCivil + 
            " e salário R$" + salario + ", encontra-se empregado(a) neste estabelecimento.");
    }
}
    
retornou = Trabalhador(a) Diego do sexo M, idade 22, estado civil Solteiro e salário R$1336.58, encontra-se empregado(a) neste estabelecimento.
